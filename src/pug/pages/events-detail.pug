extends ../layout/main

block variables
	- var title = 'Мероприятия детальная';
	- var h1 = 'Гимнастика для лиц уважаемого возраста: Бесплатно в Центре кинезитерапии';

block breadcrumb
	-
		var breadcrumbs=[
			{href:'/',name:'Главная'},
			{href:'#',name:'Мероприятия'},
			{href:'#',name:'Гимнастика для лиц уважаемого возраста: Бесплатно в Центре кинезитерапии'},
		];

	+breadcrumbs(breadcrumbs)

block content
	section.event-detail
		.container
			.row.event-detail__sect
				.col-lg-9
					.event-det-main
						.event-det-main__content
							.calendar-paper
								.calendar-paper__month Март
								.calendar-paper__date 17

							.event-det-main__text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet. Proin gravida dolor sit amet lacus accumsan et viverra justo commodo. Proin sodales pulvinar tempor. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Nam fermentum, nulla luctus pharetra vulputate, felis tellus mollis orci, sed rhoncus sapien nunc eget.

						a.btn(href='#') Зарегистрируйтесь бесплатно

				.col-lg-3.d-flex.justify-content-lg-end
					.social
						.social__title Рассказать друзьям о событии
						
						.social-list
							.social-list__item
								+svg('ic-facebook','ic-facebook', '34', '34')

							.social-list__item
								+svg('ic-vk','ic-vk', '34', '34')

							.social-list__item
								+svg('ic-twitter','ic-twitter', '34', '34')

			.row.event-detail__sect
				.col-12
					.h2 Эффективность занятий

					.btn-advant
						-
							var list=[
								'Устранение боли',
								'Укрепление мышц',
								'Разработка суставов',
								'Развитие координации',
							]
						each item in list
							.btn-advant__item= item

			.row.event-detail__sect
				.col-12
					.h2 Дополнительный эффект

					.event-det-add
						.event-det-add__desc
							p
								b Суставная гимнастика способствует улучшению работы:

							ul.type-list
								li сердечно-сосудистой системы,
								li дыхательной системы,
								li обмена веществ,
								li желудочно-кишечного тракта,
								li мочеполовой системы,
								li вегетососудистой системы.


						.info
							.info__icon
								img(src="assets/img/info.svg", alt="")

							.info__text
								p В комплекс партерной гимнастики входят упражнения для основных групп мышц спины, пресса, ног, рук и упражнения на растягивание, которые улучшают кровообращение, способствуют развитию гибкости, силы, выносливости, координации.

								p Проводится гимнастика на ковриках и с использованием гимнастического мяча (фитбола), скакалок и другого гимнастического инвентаря. Главное достоинство партерной гимнастики – она подходит для всех! Нет никаких ограничений по возрасту, полу, уровню физической подготовки. Ведь все упражнения выполняются лёжа или сидя, поэтому нет излишней нагрузки на суставы и кровеносную систему (в частности, варикозное заболевание вен отнюдь не является препятствием для занятий).

			.row.event-detail__sect
				.col-12
					.h2 Как проходят занятия

					.gallery
						-
							var list=[
								'gallery1.jpg',
								'gallery2.jpg',
								'gallery3.jpg',
							]

						each item, index in list
							.gallery__item
								svg(version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' viewBox='0 0 375 309' preserveAspectRatio='xMinYMin meet')
