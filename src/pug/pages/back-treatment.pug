										clippath(id='clip-gallery-'+index)
											path(fill="#ffffff" d='M138.53,1.4l43.706,3.256C239.879,16.311,295.171,27.75,325.471,68.369c11.2,15.009,20.549,31.162,26.4,52.087,20,71.553-12.536,140.82-52.361,166.955-28.8,18.9-73.773,20.908-109.481,7.441-63.7-24.023-128.906-66.978-161.41-124.17C12.24,141.868,2.925,91.751,21.692,57.673c15.9-28.866,43.114-43.8,77.892-52.551l25.1-3.256Z')
										image(xlink:href='assets/img/'+item width='100%' height='100%' style="clip-path:url(#clip-gallery-"+index+");")

		section.prices-wrap
			.container
				.row
					.col-12
						.h2 Стоимость посещения
		
			.program-list.program-list_nowrap
				.container
					.row
						-
							var list=[
								{title:'Первое посещение', free:"Бесплатно", color:'green'},
								{title:'Разовые посещения', price:'500', cur:'р / занятие', text:'при оплате 10 занятий скидка 10%', color:'yellow'},
								{title:'Абонемент', price:'3 000', cur:'р / месяц', text:'при оптате за год скидка 40%', check:'long'},
							]

						each item,index in list
							.col-md-6.col-lg-4
								.program-card(class=item.color?'program-card_'+item.color:'')
									.program-card__content
										.program-card__title= item.title

										.program-card__main
											.program-card__info
												.program-card__desc
													if(item.free)
														.program-card__price.program-card__price_big=item.free
													else
														.program-card__price
															span.program-card__num= item.price
															|&nbsp;
															= item.cur

													if(item.text)
														.program-card__text= item.text

												.program-card__params
													if(item.check == 'long')
														.input-check
															input(type='checkbox', id='check'+index+'1')
															label.input-check__label(for='check'+index+'1')
																span.input-check__mark
																	+svg('ic-tick','ic-tick', '10', '8')
																span.input-check__text Гимнастический зал

														.input-check
															input(type='checkbox', id='check'+index+'2')
															label.input-check__label(for='check'+index+'2')
																span.input-check__mark
																	+svg('ic-tick','ic-tick', '10', '8')
																span.input-check__text Личный инструктор

														.input-check
															input(type='checkbox', id='check'+index+'3')
															label.input-check__label(for='check'+index+'3')
																span.input-check__mark
																	+svg('ic-tick','ic-tick', '10', '8')
																span.input-check__text Наблюдение у врача

														.input-check
															input(type='checkbox', id='check'+index+'4')
															label.input-check__label(for='check'+index+'4')
																span.input-check__mark
																	+svg('ic-tick','ic-tick', '10', '8')
																span.input-check__text Личная программа оздоровления
													else
														.input-check
															input(type='checkbox', id='check'+index+'1')
															label.input-check__label(for='check'+index+'1')
																span.input-check__mark
																	+svg('ic-tick','ic-tick', '10', '8')
																span.input-check__text Гимнастический зал

														.input-check
															input(type='checkbox', id='check'+index+'2')
															label.input-check__label(for='check'+index+'2')
																span.input-check__mark
																	+svg('ic-tick','ic-tick', '10', '8')
																span.input-check__text Личный инструктор
											
											.program-card__more
												a.btn.btn_border(href='#') Выбрать тариф