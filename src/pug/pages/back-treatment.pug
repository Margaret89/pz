extends ../layout/main

block variables
	- var title = 'Для тех, кто в кресле';

block breadcrumb
	-
		var breadcrumbs=[
			{href:'/',name:'Главная'},
			{href:'#',name:'Статьи'},
		];

	+breadcrumbs(breadcrumbs)

block content
	.diagnosis-wrap
		section.diagnosis
			.container
				.row
					.col-12
						.diagnosis__layuot
							.diagnosis__content
								.h1 Лечение спины для ведущих сидячий образ жизни

								.h2 Эффективность занятий

								.btn-advant.btn-advant_col
									-
										var list=[
											'Устранение боли',
											'Укрепление мышц',
											'Разработка суставов',
											'Развитие координации',
										]
									each item in list
										.btn-advant__item= item
							
							.diagnosis__sidebar
								.event-calendar
									.event-calendar__title Ближайшие бесплатные мероприятия

									.event-calendar__list
										-
											var list=[
												{month:'Март', date:'17', text:'Зарядка для программиста и тех кто работает "в кресле"'},
												{month:'Март', date:'24', text:'Зарядка для программиста и тех кто работает "в кресле"'},
												{month:'Март', date:'31', text:'Зарядка для программиста и тех кто работает "в кресле"'},
											]

										each item, index in list
											.event-calendar__item
												.calendar-paper
													.calendar-paper__month= item.month
													.calendar-paper__date= item.date

												.event-calendar__text= item.text


									.event-calendar__more
										a(href="#") Все события центра

		section.event-add
			.container
				.row
					.col-12
						.h2 Дополнительный эффект

						.event-det-add
							.event-det-add__desc
								p
									b Суставная гимнастика способствует улучшению работы:

								ul.type-list
									li сердечно-сосудистой системы,
									li дыхательной системы,
									li обмена веществ,
									li желудочно-кишечного тракта,
									li мочеполовой системы,
									li вегетососудистой системы.


							.info
								.info__icon
									img(src="assets/img/info.svg", alt="")

								.info__text
									p В комплекс партерной гимнастики входят упражнения для основных групп мышц спины, пресса, ног, рук и упражнения на растягивание, которые улучшают кровообращение, способствуют развитию гибкости, силы, выносливости, координации.

									p Проводится гимнастика на ковриках и с использованием гимнастического мяча (фитбола), скакалок и другого гимнастического инвентаря. Главное достоинство партерной гимнастики – она подходит для всех! Нет никаких ограничений по возрасту, полу, уровню физической подготовки. Ведь все упражнения выполняются лёжа или сидя, поэтому нет излишней нагрузки на суставы и кровеносную систему (в частности, варикозное заболевание вен отнюдь не является препятствием для занятий).


		section.gallery-wrap
			.container
				.row
					.col-12
						.h2 Как проходят занятия

				.gallery
					.row
						-
							var list=[
								'gallery1.jpg',
								'gallery2.jpg',
								'gallery3.jpg',
							]

						each item, index in list
							.col-sm-6.col-md-4
								.gallery__item
									svg(version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' viewBox='0 0 375 309' preserveAspectRatio='xMinYMin meet')
										path(fill="#a4c2e6" d='M123.384,6.062l46.363-4.406c62.011,1.952,121.524,4.1,158.173,41.5,13.542,13.82,25.279,29.176,33.889,50.193,29.443,71.87,3.353,150.751-35.474,185.454-28.075,25.092-75.157,35.279-114.3,27.482-69.836-13.909-143.482-47.512-184.4-102C7.021,176.841-8.666,125.661,7.075,86.358,20.408,53.066,47.287,32.431,82.848,16.97L108.87,9.036Z')
